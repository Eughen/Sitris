@model WebLibrary.Models.BooksStaroseletsEV
@{
    ViewData["Title"] = "Удаление книги";
}
<h2>@ViewBag.Title</h2>
<div>
    <input type="hidden" asp-for="id" />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Model.name
        </dd>

        <dt>Издательство</dt>
        <dd>
            @Model.publisher
        </dd>
    </dl>

    <div>
        <form asp-controller="List" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>