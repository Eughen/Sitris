@model WebLibrary.Models.PublisherStaroseletsEV
@{
    ViewData["Title"] = "Удаление издателя";
}
<h2>@ViewBag.Title</h2>
<div>
    <input type="hidden" asp-for="idPublisher" />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Model.publisherName
        </dd>
    </dl>

    <div>
        <form asp-controller="Publisher" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>