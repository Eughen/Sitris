@model WebLibrary.Models.PublisherStaroseletsEV
@{
    ViewData["Title"] = "Редактирование";
}
<h2>@ViewData["Title"].</h2>

<form asp-action="Edit" asp-controller="Publisher">
    <div>
        <input type="hidden" asp-for="idPublisher" />
        <div class="form-group">
            <label asp-for="publisherName"></label>
            <input type="text" asp-for="publisherName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="adress"></label>
            <input asp-for="adress" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="phone"></label>
            <input asp-for="phone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="mail"></label>
            <input asp-for="mail" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Publisher" asp-action="ListOfPublisher">Вернуться к списку</a>
</div>