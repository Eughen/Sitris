@model WebLibrary.Models.GanresStaroseletsEV
@{
    ViewData["Title"] = "Удаление автора";
}
<h2>@ViewBag.Title</h2>
<div>
    <input type="hidden" asp-for="IdGanres" />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Model.ganresName
        </dd>
    </dl>

    <div>
        <form asp-controller="Ganres" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>