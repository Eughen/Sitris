@model IEnumerable<WebLibrary.Models.GanresStaroseletsEV>
@{
    ViewData["Title"] = "Жанры";
}


<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="Ganres" asp-action="Create">Добавить</a>
</p>
<table class="table">
    <tr>
        <th>id</th>
        <th>Жанр</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdGanres</td>
            <td>@item.ganresName</td>
            <td>
                <a asp-controller="Ganres" asp-action="Edit" asp-route-id="@item.IdGanres">Изменить</a> |
                <a asp-controller="Ganres" asp-action="Delete" asp-route-id="@item.IdGanres">Удалить</a>
            </td>
        </tr>
    }
    </table>